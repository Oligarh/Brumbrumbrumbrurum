<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bb10110b"
    android:visibility="gone"
    android:weightSum="20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#d6d4c5"
        android:shadowColor="#505050"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:background="#bb322e21"
        android:textStyle="bold"
        android:text="С Т А Т И С Т И К А" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Получено опыта:" />

        <TextView
            android:id="@+id/experience"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Заработано денег:" />

        <TextView
            android:id="@+id/money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#d6d4c5"
        android:shadowColor="#505050"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:background="#bb322e21"
        android:textStyle="bold"
        android:text="Достижения в бою" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Уничтожил врагов:" />

        <TextView
            android:id="@+id/count_frags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Нанес повреждений:" />

        <TextView
            android:id="@+id/count_damage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Перенес повреждений:" />

        <TextView
            android:id="@+id/count_carried"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:textSize="18dp"
            android:textColor="#e5e5e5"
            android:shadowColor="#505050"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="#bb322e21"
        android:gravity="right">

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="N E X T"
            android:layout_gravity="right"
            android:onClick="next" />

    </LinearLayout>

</LinearLayout>